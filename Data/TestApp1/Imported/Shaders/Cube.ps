#version 330 core

in vec4 p;
in vec3 normal;
out vec4 color;

void main()
{
	vec3 pNormal = normalize(normal);
	vec3 m1 = clamp(normal,0, 1);
	vec3 m2 = clamp(-(normal),0, 1);
	vec3 c1 = vec3(1,0,1);
	vec3 c2 = vec3(0.2,0.2,0.2);
	vec3 c3 = vec3(1,0,0);
	vec3 c4 = vec3(0,1,0);
	vec3 c5 = vec3(0,0.3,0.355);
	vec3 c6 = vec3(1,0.9,0.9);
    color.rgb = c1*m1.x + c2*m1.y + c3*m1.z + c4*m2.x + c5*m2.y + c6*m2.z;
    color.a   = 1.0;
}



